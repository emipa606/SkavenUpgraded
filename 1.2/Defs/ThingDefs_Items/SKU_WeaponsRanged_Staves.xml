      <armorPenetrationBase>0.25</armorPenetrationBase>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/VC_GreenEnergy/VC_GreenEnergy</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  <!-- Warpstone Staff One -->
  <ThingDef ParentName="VC_BaseMakeableVCStafforScroll">
    <defName>SU_WarpstoneStaffOne</defName>
    <label>Focused Warpstone Staff</label>
    <description>Placeholder</description>
    <graphicData>
      <texPath>Things/Weapons/Ranged/WarpstoneStaffOne</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>80</Steel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <equippedAngleOffset>-55</equippedAngleOffset>
    <weaponTags>
      <li>NeolithicRangedDecent</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VC_GreenEnergy</defaultProjectile>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <warmupTime>1.5</warmupTime>
        <range>25</range>
        <soundCast>QuickFlameBall</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>3</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>Staff</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>Staff Head</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
